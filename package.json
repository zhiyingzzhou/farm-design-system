{
  "name": "farm-design-system",
  "private": true,
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:ui": "turbo run dev --filter=@farm-design-system/ui",
    "storybook": "turbo run dev --filter=playground",
    "test": "turbo run test --log-order=grouped --log-prefix=none",
    "clean": "turbo run clean"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "turbo": "^2.7.2",
    "vitest": "^4.0.16"
  }
}
